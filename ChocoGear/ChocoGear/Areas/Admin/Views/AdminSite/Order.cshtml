    <div class="bodytable">
        @if (Session["listOrder"] != null)
        {
            var listOrder = (List<ChocoGear.Models.ModelView.OrderView>)Session["listOrder"];
            foreach (var item in listOrder)
            {
                <table class="tablerow" style="width:100%">
                    <tr id="">
                        <td style="max-width:40px;min-width:40px;">@item.namecus_order</td>
                        <td style="max-width:40px;min-width:40px;">@item.phone_order</td>
                        <td style="max-width:35px;min-width:30px;">@item.total<span style="padding: 0px;">$</span></td>
                        <td style="max-width:33px;min-width:35px;">@item.order_date</td>
                        @if (item.status == false)
                        {


                            <td style="max-width:40px;min-width:35px;">Have not recived</td>
                        }
                        else
                        {
                            <td style="max-width:40px;min-width:35px;">Recived</td>
                        }
                        <td style="max-width:45px;"><a onclick="showorder(this);" href="#" data-idorder="@item.id">View Detail</a></td>
                    </tr>
                </table>
            }
        }
    </div>
</div>
@section script_admin{
    <script>
        $('#Search').click(function () {
            var type = $('#type').val();
            if (type == "phone") {
                var name = $('#textSearch').val();
                $('.bodytable table').each(function (result) {
                    var id = $(this).find('td:nth-child(2)').text();
                    if (id.indexOf(name) !== 0 && id.toLowerCase().indexOf(name.toLowerCase()) < 0) {
                        $(this).hide();
                    } else {
                        $(this).show();
                    }
                })
            } else {
                var name = $('#textSearch').val();
                $('.bodytable table').each(function (result) {
                    var id = $(this).find('td:nth-child(1)').text();
                    if (id.indexOf(name) !== 0 && id.toLowerCase().indexOf(name.toLowerCase()) < 0) {
                        $(this).hide();
                    } else {
                        $(this).show();
                    }
                })
            }
        })
        $('#textSearch').keyup(function (event) {
            var name = $('#textSearch').val();
            if (name == "") {
                $('.bodytable table').each(function (result) {
                    $(this).show();
                })
            }
        })
        function showorder(obj) {
            var id = $(obj).attr('data-idorder');
            $.ajax({
                method: "post",
                url: "@Url.Action("ViewOrderDetail")",
                data: { id: id }
            }).done(function (data) {
                $('#table').html(data);
            });

            var ordershow = document.getElementById("order-form");
            ordershow.style.display = 'block';
        }
        function hideorder() {
            var orderhide = document.getElementById("order-form");
            orderhide.style.display = 'none';
        }
    </script>
    }

