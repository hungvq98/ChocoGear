
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Areas/Admin/Views/Shared/AdminPageEmpty.cshtml";
}
<style>
    body {
        background: #EBABAB;
    }
    .container-EditProduct {
        margin-right: auto;
        margin-left: auto;
        display: block;
        width: 500px;
        height: 720px;
        margin-top: 50px;
        font-family: 'Source Sans Pro', sans-serif;
        font-size: 15px;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.8);
        border-radius:10px;
        background:white;
    }
    .formedit {
        box-sizing:border-box;
        float:left;
        height:100%;
        width:100%;
        padding:10px;
    }
    .formedit input {
        margin-left: 55px;
        margin-top:22px;
    }

    .formedit select {
        margin-left: 55px;
        margin-top:22px;
    }

    .formedit textarea {
        margin-left: 55px;
        margin-top:22px;
    }

    .formedit h4 {
        margin-top: 17px;
        margin-left: 55px;
        font-family: 'Source Sans Pro', sans-serif;
    }

    .picturebox {
        position: absolute;
        height: 40px;
        padding: 0px;
        width: 50px;
        border: 1px solid #2C2A2A;
        display: inline-block;
        top: 372px;
    }

    .formedit h4::after {
        content: '';
        bottom: 0;
        width: 115px;
        height: 2px;
        background: #2C2A2A;
        display: block;
    }

   
    .btn-update {
        width: 180px;
        height: 50px;
        border: none;
        border-radius: 25px;
        background: #373434;
        margin-top: 0px;
        color: white;
