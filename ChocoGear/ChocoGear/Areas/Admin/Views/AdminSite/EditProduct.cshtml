    ViewBag.Title = "EditProduct";
    Layout = "~/Areas/Admin/Views/Shared/AdminPageEmpty.cshtml";

}
<style>
    body {
        background: #EBABAB;
    }

    .container-EditProduct {
        margin-right: auto;
        margin-left: auto;
        display: block;
        width: 500px;
        height: 720px;
        margin-top: 50px;
        font-family: 'Source Sans Pro', sans-serif;
        font-size: 15px;
