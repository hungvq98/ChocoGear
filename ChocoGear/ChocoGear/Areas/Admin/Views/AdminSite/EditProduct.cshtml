</style>
<div class="container-EditProduct">
    <div class="formedit">
        @if (Session["inforProduct"] != null)
        {
            var product = (ChocoGear.Models.ModelView.ProductView)Session["inforProduct"];
            var listCate = (List<ChocoGear.Models.ModelView.CategoryView>)Session["listCate"];
            var listBrand = (List<ChocoGear.Models.ModelView.Brand>)Session["listBrand"];
            <form action="/" method="post">
                <h4>Update Product</h4>
                <input id="name" type="text" class="Name" name="Name" placeholder="Name" value="@product.name_product" />
                <br />
                <select class="Category" name="Category" id="Category">

                    <option selected value="@product.id_category">@product.name_category</option>

                    @foreach (var item in listCate)
                    {
                        <option value="@item.id">@item.name_category</option>
                    }
                </select>
                <select class="Status" name="Status" id="Status">
                    @if (product.status == true)
                    {
                        <option value="" selected>Available</option>
                        <option value="">Unavailable</option>
                    }
                    else
                    {
                        <option value="">Available</option>
                        <option value="" selected>Unavailable</option>
                    }

                </select>
                <input type="hidden" id="Category_id" name="Category_id" value="/" />
                <br />
                <select class="Brand" name="Brand" id="Brand">
                    <option selected value="@product.id_brand">@product.name_brand</option>

                    @foreach (var item in listBrand)
                    {
                        <option value="@item.id">@item.name</option>
                    }

                </select>
                <br />
                <input class="Price" id="Price" type="text" name="Price" value="@product.price" placeholder="Price" />

                <br />
                <input class="Discount" id="Discount" value="@product.discount" type="text" name="Discount" placeholder="Discount" />
                <br />
                <input id="img" class="Img" type="file" onchange="chooseFile(this)" name="Img" /><div class="picturebox"><img id="imagechoose" width="50" src="@Url.Content("~/Areas/Admin/Upload/")@product.name_image" /></div>
                <br />
                <textarea id="Desciption" class="Description" name="Decription" placeholder="Description">@product.description</textarea>
                <br />
                <input class="btn-update" id="Create" type="submit" value="Update" />
            </form>
        }
    </div>
</div>

