<h4>Category</h4>
<div class="srcbar-cv">
    <input id="textSearch" class="srcbar" type="text" name="name" value=""  placeholder="Name"/><div class="btn-src" id="Search"><img src="~/Upload/Icon/iconfinder_icon.png" /></div>
</div>
<form method="post">
    <input type="text" class="Name" id="Name" name="Name" placeholder="Name" />
    <br />
    <div class="status">
        <input type="checkbox" id="Statuss" name="name" />
    </div>
    <div class="status-text">
        <p>Active</p>
    </div>
    <br />
    <input class="btn-add" id="create" type="submit" value="Add Product" />
</form>
@*edit*@
<form action="" method="post" class="category-edit-form" id="editform">
    <input type="text" class="Name" id="Name_Edit" name="Name" placeholder="Name" />
    <br />
    <div class="status">
        <input type="checkbox" id="Status_Edit" name="name" />
    </div>
    <input type="hidden" class="idcate" id="idcate" name="idcate"/>
    <div class="status-text">
        <p>Active</p>
    </div>
    <div class="btn-area">
        <input class="btn-edit" id="update" style="font-size: 12px;" value="Update" /><input class="btn-cancel" style="font-size: 12px;" id="cancel" value="Cancel" />
    </div>

</form>

<div class="righside">
    <div class="headtable">
        <table class="headtable2" style="width:100%">
            <tr>
                <td style="max-width:55px;" >Name</td>
                <td style="max-width:51px;">Status</td>
                <td style="max-width:60px;">Action</td>
            </tr>
        </table>
    </div>
    <div class="bodytable">
        @if (Session["listCate"] != null)
        {
            var listCate = (List<ChocoGear.Models.ModelView.CategoryView>)Session["listCate"];
            foreach (var item in listCate)
            {
                <table class="tablerow" id="Row_@row" style="width:100%">
                    <tr>
                        <td style="max-width:40px;" class="HeadName">@item.name_category</td>
                        
                            @if (item.status == true)
                            {
                    <td style="max-width:40px;" class="HeadCheckbok">Available</td>
                        }
                        else
                        {
                    <td style="max-width:40px;" class="HeadCheckbok">Unavailable</td>
                        }
                        <td style="max-width:40px;"><button type="button" class="btn-Del" data-row="@row" onclick="deleteCate(this)" data-namecategory="@item.name_category" data-idcategory="@item.id"><img width="20" src="~/Areas/Admin/Upload/Icon/icondelete.ico" alt="Alternate Text" /></button><button class="btn-Edit" data-idcategory="@item.id" onclick="Edit(this);"><img width="20" src="~/Areas/Admin/Upload/Icon/iconedit.ico" alt="Alternate Text" /></button></td>
                    </tr>
                </table>
                row++;
            }
        }
    </div>
</div>
@section script_admin{
    <script>
    $('#create').click(function () {
        var Name = $('#Name').val();
        if (Name != "") {
            var Status = $('#Statuss').prop('checked');
            $.ajax({
                method: "post",
                url: "@Url.Action("CreateCategory")",
                data: { Name: Name, Status: Status }
            }).done(function (data) {

            });
        } else {
            alert("Please enter information of category !!");
        }

    })
        var nameBeforeEdit = "";
        function Edit(obj) {
            var a = $(obj).parents("tr").find(".HeadName").text();
            nameBeforeEdit = a;
            var b = $(obj).parents("tr").find(".HeadCheckbok").text();
            var idcate = $(obj).attr('data-idcategory');

            $('#Name_Edit').val(a);
            if (b == "Available") {
                $('#Status_Edit').prop('checked', true);
            }
            $('#idcate').val(idcate);
            var showEdit = document.getElementById("editform");
            showEdit.style.display = 'block';
        }

        $('#update').click(function () {
            var name = $('#Name_Edit').val();
            var status = $('#Status_Edit').prop('checked');
            var id = $('#idcate').val();
            $.ajax({
                method: "post",
                url: "@Url.Action("UpdateCategory")",
                data: { id: id, name: name, status: status }
            }).done(function (data) {
                alert(data);
                $('#bodytable').load();
            });
        })
        $('#cancel').click(function () {
            var showEdit = document.getElementById("editform");
            showEdit.style.display = 'none';
        })

        function deleteCate(obj) {
            var id = $(obj).attr('data-idcategory');
            var name = $(obj).attr('data-namecategory');
            var row = $(obj).attr('data-row');
            if (confirm("Are you sure you want to delete this category?")) {
                $.ajax({
                method: "post",
                url: "@Url.Action("DeleteCate")",
                data: { id: id }
                }).done(function (data) {
                    $('#Row_' + row).remove();
            });
            }
            else {
                return false;
            }


        }
        $('#Search').click(function () {
            var name = $('#textSearch').val();
            $('.bodytable table').each(function (result) {
                var id = $(this).find('td:nth-child(1)').text();
                if (id.indexOf(name) !== 0 && id.toLowerCase().indexOf(name.toLowerCase()) < 0) {
                    $(this).hide();
                } else {
                    $(this).show();
                }
            })
        })

        $('#textSearch').keyup(function (event) {
            var name = $('#textSearch').val();
            if (name == "") {
                $('.bodytable table').each(function (result) {
                    $(this).show();
                })
            }
        })
    </script>
}


