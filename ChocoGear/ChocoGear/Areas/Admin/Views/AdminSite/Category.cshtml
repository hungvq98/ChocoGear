    .btn-area {
    }
    .btn-edit {
        display: inline-flex;
        width: 100px;
        height: 50px;
        border: none;
        border-radius: 25px;
        background: #373434;
        margin-top: 20px;
        color: white;
        cursor: pointer;
        padding: 0 30px 0 30px;
        margin-right:10px;
    }
    .btn-cancel {
        display: inline-flex;
        width: 100px;
        height: 50px;
        border: none;
        border-radius: 25px;
        background: #373434;
        margin-top: 20px;
        color: white;
