        height: 45px;
        padding: 0;
        width: 300px;
        background: white;
        position: absolute;
        top: 10px;
        border-radius: 10px;
        left: 950px;
        margin: 0;
    }

    .srcbar {
        width: 95%;
        height: 45px;
        padding: 0;
        margin: 0;
        border: none;
        border-radius: 10px;
        outline: none;
        font-family: 'Source Sans Pro', sans-serif;
        font-size: 15px;
        font-weight: 600;
        color: #707070;
        margin-left: 20px;
    }

    .btn-src {
        height: 45px;
        width: 45px;
