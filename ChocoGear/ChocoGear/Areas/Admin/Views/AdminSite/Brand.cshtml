<h4>Brand</h4>
<div class="srcbar-cv">
    <input id="textSearch" class="srcbar" type="text" name="name" value="" placeholder="Name Brand" /><div class="btn-src" id="Search"><img src="~/Upload/Icon/iconfinder_icon.png" /></div>
</div>
<form action="@Url.Action("CreateBrand")" method="post">
    <input type="text" class="Name" id="Name" name="Name" placeholder="Name Brand" />
    <br />
    <br />
    <br />
    <input class="btn-add" id="create" type="submit" value="Add Brand" />
</form>
@*edit*@
<form action="" method="post" class="category-edit-form" id="editform">
    <input type="text" class="Name" id="Name_Edit" name="Name" placeholder="Name" />
    <br />
    <input type="hidden" class="idcate" id="idcate" name="idcate" />
    <div class="btn-area">
        <input class="btn-edit" id="update" style="font-size: 12px;" value="Update" /><input class="btn-cancel" style="font-size: 12px;" id="cancel" value="Cancel" />
    </div>

</form>

<div class="righside">
    <div class="headtable">
        <table class="headtable2" style="width:100%">
            <tr>
                <td style="max-width:55px;">Name</td>
                <td style="max-width:60px;">Action</td>
            </tr>
        </table>
    </div>
    <div class="bodytable">
        @if (Session["listBrands"] != null)
        {
            var listCate = (List<ChocoGear.Models.ModelView.Brand>)Session["listBrands"];
            foreach (var item in listCate)
            {
                <table class="tablerow" id="Row_@row" style="width:100%">
                    <tr>
                        <td style="max-width:40px;" class="HeadName">@item.name</td>
                        <td style="max-width:40px;"><button type="button" class="btn-Del" data-row="@row" onclick="deleteBrand(this)" data-name="@item.name" data-id="@item.id"><img width="20" src="~/Areas/Admin/Upload/Icon/icondelete.ico" alt="Alternate Text" /></button><button class="btn-Edit" data-id="@item.id" onclick="Edit(this);"><img width="20" src="~/Areas/Admin/Upload/Icon/iconedit.ico" alt="Alternate Text" /></button></td>
                    </tr>
                </table>
                row++;
            }
        }
    </div>
</div>
@section script_admin{
    <script>
        function deleteBrand(obj) {
            var id = $(obj).attr('data-id');
            var name = $(obj).attr('data-name');
            var row = $(obj).attr('data-row');
            if (confirm("Are you sure you want to delete this brand?")) {
                $.ajax({
                method: "post",
                url: "@Url.Action("DeleteBrand")",
                data: { id: id }
                }).done(function (data) {
                    if (data == "Delete Success") {
                        alert(data)
                        $('#Row_' + row).remove();
                    } else {
                        alert(data);
                    }
            });
            }
            else {
                return false;
            }
        }
        function Edit(obj) {
            var a = $(obj).parents("tr").find(".HeadName").text();
            nameBeforeEdit = a;
            var b = $(obj).parents("tr").find(".HeadCheckbok").text();
            var id = $(obj).attr('data-id');

            $('#Name_Edit').val(a);

            $('#idcate').val(id);
            var showEdit = document.getElementById("editform");
            showEdit.style.display = 'block';
        }
        $('#cancel').click(function () {
            var showEdit = document.getElementById("editform");
            showEdit.style.display = 'none';
        })
        $('#Search').click(function () {
            var name = $('#textSearch').val();
            $('.bodytable table').each(function (result) {
                var id = $(this).find('td:nth-child(1)').text();
                if (id.indexOf(name) !== 0 && id.toLowerCase().indexOf(name.toLowerCase()) < 0) {
                    $(this).hide();
                } else {
                    $(this).show();
                }
            })
        })
        $('#update').click(function () {
            var name = $('#Name_Edit').val();
            var id = $('#idcate').val();
            $.ajax({
                method: "post",
                url: "@Url.Action("UpdateBrand")",
                data: { id: id, name: name}
            }).done(function (data) {
                if (data == "success") {
                    window.location.href = "@Url.Action("Brand")";
                } else {
                    alert(data);
                }
            });
        })
        $('#textSearch').keyup(function (event) {
            var name = $('#textSearch').val();
            if (name == "") {
                $('.bodytable table').each(function (result) {
                    $(this).show();
                })
            }
        })
    </script>
    }
