    $(window).scroll(function (event) {
        var mnbar = $('#Menubar');
        var scrTop = $(this).scrollTop()
        @*alert(scrTop);*@
        if (scrTop >= 650) {
            mnbar.css('display', 'block');
        } else {
            mnbar.css('display', 'none');
        }
    });
</script>