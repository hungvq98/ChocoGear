@{
    ViewBag.Title = "Home Page";
}
<style>
    ::-webkit-scrollbar {
        width: 2px;
    }

    ::-webkit-scrollbar-track {
        background: white;
    }

    ::-webkit-scrollbar-thumb {
        background: #EBABAB;
        border-radius: 20px;
        height: 100px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(to right, #1093ff, #83d1e9);
        }

    .Content-Product {
        height: 100%;
        width: 100%;
        padding: 0;
    }

    .Product-cv {
        padding: 0;
        width: 60%;
        height: 100%;
        background: white;
        margin-left: auto;
        margin-right: auto;
    }

        .Product-cv .header {
            width: 100%;
            height: 50px;
            background: #EBABAB;
            padding-top: 12px;
            margin-top: 10px;
        }

            .Product-cv .header a {
                font-family: 'Source Sans Pro', sans-serif;
                font-weight: 600;
            }

    .col-4 {
        width: 100%;
        border: 1px solid #EBABAB;
        padding: 0;
        background: #FFDFDF;
        margin-bottom: 0px;
        margin-top: 10px;
    }

        .col-4 .img {
            width: 100%;
            height: 100%;
        }

        .col-4 p {
            margin-left: 10px;
        }

    .Content-small {
        padding: 0;
    }

    .row {
        padding: 0;
    }

    .Product-cv .header p {
        margin-left: 10px;
        font-size: 20px;
        font-family: 'Source Sans Pro', sans-serif;
        font-weight: 600;
        display: inline-block;
        margin-right: 85%;
    }
</style>
