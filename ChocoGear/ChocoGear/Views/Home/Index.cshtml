    }
    .productTag {
        width: 100%;
        border: 1px solid #EBABAB;
        padding: 0;
        background: white;
        margin-bottom: 0px;
        margin-top: 10px;
        overflow: hidden;
        border-top-right-radius: 20px;
        border-bottom-left-radius: 20px;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
    }

    

    .col-4 p {
        margin-left: 10px;
        
    }

    .Content-small {
        padding: 0;
    }

    .row {
        padding: 0;
    }

    .Product-cv .header p {
        margin-left: 10px;
        font-size: 20px;
        font-family: 'Source Sans Pro', sans-serif;
        font-weight: 600;
        display: inline-block;
        margin-right: 85%;
    }
    .col-4 .NamePro {
        font-size:15px;
    }
    
    .header {
        border-radius:5px;
    }
    .btnbuy-content {
        display:inline-block;
    }
    .btnbuy-content .PricePro {
        display:inline-block;
        font-style:normal;
    }
    .btnbuy-content a {
        font-size:15px;
        font-weight:600;
        display:inline-block;
        font-style:italic;
    }
    .btnbuy-content a:hover {
        color:hotpink;
    }
    .Menubar .list li a:hover {
        color:white;
    }
    .Menubar .list li:hover {
