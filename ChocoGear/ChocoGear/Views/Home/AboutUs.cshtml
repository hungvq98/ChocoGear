
@{
    ViewBag.Title = "AboutUs";
    Layout = "~/Views/Shared/SmallUserPage.cshtml";
}
<style>
    .Line1 {
        height: 500px;
        overflow: hidden;
    }

    .Line2 {
        height: 400px;
        box-sizing: border-box;
    }

    .Line2 .left {
        height: 60%;
        width: 100%;
        background: white;
    }

    .Line3 {
        height: 400px;
    }

    .left img {
        border-radius: 50%;
    }


    h1 {
        color: white;
        font-family: 'Source Sans Pro', sans-serif;
        position: absolute;
        left: 50%;
        transform: translate(-50%,50%);
        font-size: 50px;
    }

    .Line1 p {
        top: 250px;
        left: 50%;
        transform: translate(-50%,50%);
        font-size: 30px;
        font-family: 'Source Sans Pro', sans-serif;
        position: absolute;
        color:black;
        background:white;
    }
    .Line1 .p1 {
        top: 300px;
        left: 50%;
        transform: translate(-50%,50%);
        font-size: 30px;
        font-family: 'Source Sans Pro', sans-serif;
        position: absolute;
        color: black;
        font-style:italic;
    }

    .para {
        font-family: 'Source Sans Pro', sans-serif;
        margin-left: auto;
        margin-right: auto;
        width: 700px;
        font-weight:600;
    }
    ::-webkit-scrollbar {
        width: 2px;
    }

    ::-webkit-scrollbar-track {
        background: lightblue;
    }

    ::-webkit-scrollbar-thumb {
        background: #EBABAB;
        border-radius: 20px;
        height: 100px;
    }

    ::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(to right, #1093ff, #83d1e9);
    }
    .left img {
        margin-top:20px;
        margin-left:auto;
        margin-right:auto;
        display:block;
    }
    .Line3 {
        height:300px;
        background:url(/Upload/Img/PCbgoverflow.jpg);
        background-attachment:fixed;
        background-size:cover;
    }
    .FooterAbout {
        height:200px;
        background:black;
    }
    .FooterAbout .Footpara p{
        display:inline-block;
    }
    .FooterAbout .address,.FooterAbout .phone {
        box-sizing:border-box;
        display:inline-block;
        color:white;
        margin-top:50px;
        margin-left:25%;
        font-family: 'Source Sans Pro', sans-serif;

    }
    .FooterAbout li {
        margin-bottom:20px;
        list-style-type:none;
    }
    .li-head {
        margin-bottom:20px;
        font-weight:600;
    }
    .Line3 span {
        font-family: 'Source Sans Pro', sans-serif;
        font-size: 150px;
        -webkit-text-stroke: 3px white;
        color:transparent;
        margin-left:30%;
    }

</style>
