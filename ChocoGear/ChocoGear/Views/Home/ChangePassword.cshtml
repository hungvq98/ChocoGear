
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/SmallUserPage.cshtml";
}
<style>
    .changepass {
        margin-left: auto;
        margin-right: auto;
        height: 500px;
        width: 600px;
        background: white;
        border-radius: 10px;
        margin-top: 10%;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.5);
        padding:30px 20px 30px 60px;
    }
    .changepass input {
        height: 50px;
        width: 90%;
        font-size: 15px;
        font-family: 'Source Sans Pro', sans-serif;
        color: #707070;
        margin-top: 30px;
        padding-left: 10px;
        outline: none;
        border-bottom: 2px #ECACAC solid;
        border-left:none;
        border-right:none;
        border-top:none;
        font-weight:600;
    }
    .changepass button {
        height:50px;
        width:200px;
        border:none;
        outline:none;
        margin-top:50px;
        font-family: 'Source Sans Pro', sans-serif;
        color: white;
        background:#ECACAC;
        font-weight:600;
        border-radius:5px;
        transition:0.5s;
    }
    .changepass button:hover{
        transform:scale(0.98);
        cursor:pointer;
    }
    h4 {
        font-family: 'Source Sans Pro', sans-serif;
        color: #707070;
        margin-bottom:40px;

    }
    .btn-box {
        display:inline-block;
    }
    .btn-1, .btn-2 {
        display:inline-block;
        padding:0;
        width:258px;
    }
</style>
<div class="changepass">
    <h4>CHANGE PASSWORD FORM</h4>
    <form action="/" method="post">
        <input type="text" name="name" value="" placeholder="Old Password" />
        <br />
        <input type="password" name="name" value="" placeholder="New Password" />
        <br />
        <input type="password" name="name" value="" placeholder="Confirm Password" />
        <br />
        <div class="btn-box">
            <div class="btn-1">
                <button>Change Password</button>
            </div>
            <div class="btn-2">
                <button>Cancel</button>
            </div>
        </div>
        
    </form>
</div>

